<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://java.sun.com/xml/ns/javaee"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd"
             version="6">
    <application-name>optinman</application-name>
    <description>Optin Manager</description>
    <display-name>optinman</display-name>
    <initialize-in-order>true</initialize-in-order>
    <module id="optinman-ejb">
        <ejb>optinman-ejb.jar</ejb>
    </module>
    <module id="optinman-web">
        <web>
            <web-uri>optinman-web.war</web-uri>
            <context-root>optinman</context-root>
        </web>
    </module>
    <security-role>
        <description>Administrator</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>User</description>
        <role-name>user</role-name>
    </security-role>
    <library-directory>lib</library-directory>
</application>
