<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 version="2.0">
    <entity class="eu.artofcoding.optinman.entity.CompanyEntity">
        <table name="company" schema="" catalog="optinman"/>
        <named-query name="Company.findCompanyByCity">
            <query>SELECT c FROM CompanyEntity c WHERE c.city = :city</query>
        </named-query>
        <pre-persist method-name="updateLastModified"/>
        <pre-update method-name="updateLastModified"/>
        <attributes>
            <id name="customerNumber">
                <column name="customer_number" nullable="false" length="10"/>
                <generated-value strategy="AUTO"/>
            </id>
            <basic name="id">
                <column name="id" length="10"/>
            </basic>
            <basic name="companyName">
                <column name="company_name" length="200"/>
            </basic>
            <basic name="companyName2">
                <column name="company_name2" length="200"/>
            </basic>
            <basic name="address">
                <column name="address" length="100"/>
            </basic>
            <basic name="zipcode">
                <column name="zipcode" length="20"/>
            </basic>
            <basic name="city">
                <column name="city" length="100"/>
            </basic>
            <basic name="country">
                <column name="country" length="100"/>
            </basic>
            <basic name="notes">
                <column name="notes" length="2147483647"/>
            </basic>
            <basic name="lastModified">
                <column name="last_modified" nullable="false" length="20"/>
                <temporal>TIMESTAMP</temporal>
            </basic>
            <version name="version">
                <column name="version" length="10"/>
            </version>
        </attributes>
    </entity>
</entity-mappings>
